[sqlfluff]
# SQLFluff configuration for testing with built-in jinja templater
dialect = snowflake
templater = jinja

# Common rule exclusions for development/testing
exclude_rules = 
    # Disable some rules that might be too strict for examples
    references.keywords,  # RF04 - allow 'name' as column name for examples
    structure.column_order  # ST06 - allow flexible column ordering

# Line length
max_line_length = 120

# Enable more detailed output
verbose = 0

[sqlfluff:templater:jinja]
# No external variables needed - the template uses {% set %} statements

[sqlfluff:indentation]
# Use consistent indentation
indented_joins = True
indented_using_on = True
template_blocks_indent = False

[sqlfluff:rules:capitalisation.keywords]
# Prefer lowercase for keywords (more modern style)
capitalisation_policy = lower

[sqlfluff:rules:capitalisation.identifiers] 
# Keep identifiers lowercase
extended_capitalisation_policy = lower

[sqlfluff:rules:capitalisation.functions]
# Keep functions lowercase
extended_capitalisation_policy = lower

[sqlfluff:rules:layout.spacing]
# Standard spacing rules
single_table_references = consistent

[sqlfluff:rules:ambiguous.column_count]
# Allow SELECT * in examples
single_table_references = consistent